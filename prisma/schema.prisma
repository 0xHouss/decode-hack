generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  firstName String
  lastName  String
  email     String
  phone     String
  birthDate String
  NIN       String

  enrollmentYear Int
  institution    String
  matricule      String
  major          String

  teamName              String
  availability          String
  prevExperience        String
  prevExperienceDetails String

  motivation String
  skills     String
  github     String
  linkedin   String
  portfolio  String
  kaggle     String
}
